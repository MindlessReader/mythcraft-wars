# Shows the skill locations editor dialog with current values pre-filled
# Parameters: $(attackName), $(defenseName), $(magicName), $(specialName)
$dialog show @s {type:"minecraft:multi_action",title:"Configure Skill Locations",pause:true,inputs:[{type:"minecraft:text",key:"attack",label:"Attack Location",initial:"$(attackName)",max_length:32},{type:"minecraft:text",key:"defense",label:"Defense Location",initial:"$(defenseName)",max_length:32},{type:"minecraft:text",key:"magic",label:"Magic Location",initial:"$(magicName)",max_length:32},{type:"minecraft:text",key:"special",label:"Special Location",initial:"$(specialName)",max_length:32}],columns:1,actions:[{label:{text:"Save",color:"green"},width:150,action:{type:"minecraft:dynamic/run_command",template:"function mythcraft:config/apply/skills {attack:\"\u0024(attack)\",defense:\"\u0024(defense)\",magic:\"\u0024(magic)\",special:\"\u0024(special)\"}"}},{label:{text:"Back"},width:150,action:{type:"minecraft:run_command",command:"function mythcraft:config/open"}}]}
